{
  "version": "1.0.0",
  "description": "OpenClaw QA Testing Framework - Production Grade",

  "timeout": {
    "fast": 10,
    "normal": 30,
    "slow": 60,
    "stress": 300
  },

  "thresholds": {
    "max_session_size_mb": 5,
    "max_error_rate": 5,
    "min_success_rate": 95,
    "max_lock_age_seconds": 30,
    "max_disk_usage_percent": 90,
    "max_response_time_p95": 10
  },

  "test_scenarios": {
    "system_health": {
      "enabled": true,
      "priority": "P0",
      "tests": [
        "gateway_process",
        "gateway_rpc",
        "session_directory",
        "deadlock_detection",
        "disk_space"
      ]
    },
    "model_config": {
      "enabled": true,
      "priority": "P0",
      "tests": [
        "primary_model",
        "fallback_models",
        "oauth_auth",
        "model_availability"
      ]
    },
    "memory_integrity": {
      "enabled": true,
      "priority": "P0",
      "tests": [
        "session_format",
        "backup_mechanism",
        "cross_session_memory",
        "session_size",
        "concurrent_access"
      ]
    },
    "skills_coverage": {
      "enabled": true,
      "priority": "P1",
      "critical_skills": [
        "nano-pdf",
        "himalaya",
        "bear-notes",
        "peekaboo",
        "gemini",
        "session-logs",
        "model-usage",
        "gifgrep",
        "openai-whisper",
        "coding-agent"
      ]
    },
    "multimodal": {
      "enabled": true,
      "priority": "P0",
      "tests": {
        "image_generation": {
          "providers": ["openai-dalle", "gemini-image"],
          "test_prompt": "a simple test image"
        },
        "speech_synthesis": {
          "languages": ["zh-CN", "en-US"],
          "engines": ["macos-say"]
        },
        "speech_recognition": {
          "engines": ["whisper"]
        }
      }
    },
    "tools_invocation": {
      "enabled": true,
      "priority": "P1",
      "tools": ["bash", "read", "write", "edit"]
    },
    "performance": {
      "enabled": false,
      "priority": "P2",
      "tests": {
        "response_time": true,
        "concurrent_requests": 10,
        "long_running": 3600
      }
    }
  },

  "reporting": {
    "format": "markdown",
    "include_metrics": true,
    "include_logs": true,
    "auto_upload": false
  },

  "monitoring": {
    "continuous_mode": false,
    "interval_minutes": 10,
    "alert_on_failure": true,
    "alert_channels": []
  }
}
